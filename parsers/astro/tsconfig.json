{
    "compilerOptions": {
        "target": "es2015",
        "strict": true,
        "lib": ["es2020", "DOM"],
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tools/**/*.ts",
        "benchmark/**/*.ts"
    ]
}
