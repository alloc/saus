{
  "include": ["**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "dist",
    "client",
    "runtime",
    "utils",
    "vm",
    "tsup.config.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node16",
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./core/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2019"
  }
}
