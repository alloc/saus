{
  "include": ["**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "*.config.ts",
    "dist",
    "client",
    "runtime",
    "utils",
    "vm"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./core/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2019",
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  }
}
