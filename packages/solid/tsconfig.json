{
  "include": ["src", "vite.config.ts", "client"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "target": "es2019"
  }
}
