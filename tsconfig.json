{
  "include": [
    "src",
    "packages/html/src/resolver.ts",
    "packages/html/src/types.ts",
    "packages/html/src/visitors.spec.ts",
    "packages/html/src/traversal.ts",
    "packages/html/src/selector.spec.ts",
    "packages/html/src/selector.ts"
  ],
  "exclude": ["src/client"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2019"
  }
}
